<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Kelas</title>
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, #667eea, #764ba2);
      color: #fff;
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    }

    h1 {
      font-weight: 600;
      margin-bottom: 30px;
      color: #fff;
    }

    .card {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      border-radius: 15px;
      margin-bottom: 20px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .card-header {
      background: rgba(255, 255, 255, 0.2);
      border-bottom: none;
      border-radius: 15px 15px 0 0;
      padding: 15px 20px;
      color: #fff;
      font-weight: 600;
    }

    .card-body {
      padding: 20px;
    }

    .list-group-item {
      background: rgba(255, 255, 255, 0.1);
      border: none;
      color: #fff;
      margin-bottom: 10px;
      border-radius: 10px;
      transition: background 0.3s ease;
    }

    .list-group-item:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    a {
      color: #00ff88;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    a:hover {
      color: #00cc66;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">ðŸ“… Dashboard Kelas: <%= kelas.nama %></h1>
    
    <!-- Jadwal Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h2>ðŸ“‹ Jadwal</h2>
      </div>
      <div class="card-body">
        <% Object.keys(jadwal).forEach(hari => { %>
          <h5 class="mb-3">ðŸ“Œ <%= hari.charAt(0).toUpperCase() + hari.slice(1) %>:</h5>
          <ul class="list-group mb-4">
            <% jadwal[hari].forEach(item => { %>
              <li class="list-group-item">
                ðŸ•’ <strong><%= item.jam %></strong>: <%= item.mataKuliah %> di <%= item.ruang %>
              </li>
            <% }) %>
          </ul>
        <% }) %>
      </div>
    </div>
    
    <!-- Tugas Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h2>ðŸ“š Tugas</h2>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% tugas.forEach(item => { %>
            <li class="list-group-item">
              ðŸ“„ <strong><%= item.mataKuliah %></strong>: <%= item.judul %> (Deadline: <%= item.deadline %>) <%= item.remainingDaysInfo %>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
    
    <!-- Materi Section -->
    <div class="card mb-4">
      <div class="card-header">
        <h2>ðŸ“‚ Materi</h2>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% materi.forEach(item => { %>
            <li class="list-group-item">
              ðŸ“š <strong><%= item.mataKuliah %></strong>: <%= item.judul %> - <a href="<%= item.link %>">ðŸ”— Link</a>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bootstrap 5 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
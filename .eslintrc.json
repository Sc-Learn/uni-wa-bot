{ "env": { "es2021": true, "node": true }, "extends": [ "airbnb-base" ], "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" }, "rules": { "no-console": "off", "indent": ["error", 2], "max-len": ["error", { "code": 100, "ignoreStrings": true, "ignoreTemplateLiterals": true }], "semi": ["error", "always"], "quotes": ["error", "single", { "allowTemplateLiterals": true }], "no-unused-vars": ["error", { "argsIgnorePattern": "^", "destructuredArrayIgnorePattern": "^" }], "object-curly-spacing": ["error", "always"], "comma-dangle": ["error", "always-multiline"], "import/extensions": ["error", "ignorePackages"], "no-use-before-define": ["error", { "functions": false }], "camelcase": "off", "prefer-template": "error" } }